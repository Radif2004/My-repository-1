{
  "type": "http",
  "auth": {
    "type": "apiKey",
    "apiKey": {
      "name": "X-API-Key",
      "location": "header"
    }
  },
  "definition": {
    "openapi": "3.0.0",
    "info": {
      "title": "Notes Management API",
      "version": "1.0.0",
      "description": "Create, read, update, and delete notes with automatic summarization"
    },
    "servers": [
      {
        "url": "https://your-api-domain.com"
      }
    ],
    "paths": {
      "/api/notes": {
        "get": {
          "summary": "Get all notes",
          "description": "Retrieve all notes with their summaries",
          "operationId": "getNotes",
          "responses": {
            "200": {
              "description": "Notes retrieved successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "title": {
                          "type": "string"
                        },
                        "content": {
                          "type": "string"
                        },
                        "summary": {
                          "type": "string"
                        },
                        "summary_online": {
                          "type": "string"
                        },
                        "created_at": {
                          "type": "string",
                          "format": "date-time"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "post": {
          "summary": "Create a new note",
          "description": "Create a new note with automatic summarization",
          "operationId": "createNote",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "description": "Title of the note"
                    },
                    "content": {
                      "type": "string",
                      "description": "Content of the note"
                    }
                  },
                  "required": ["title", "content"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Note created successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "title": {
                        "type": "string"
                      },
                      "offline_summary": {
                        "type": "string"
                      },
                      "online_summary": {
                        "type": "string"
                      },
                      "has_internet": {
                        "type": "boolean"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/api/notes/{id}": {
        "get": {
          "summary": "Get a specific note",
          "description": "Retrieve a note by its ID",
          "operationId": "getNote",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              },
              "description": "Note ID"
            }
          ],
          "responses": {
            "200": {
              "description": "Note retrieved successfully"
            },
            "404": {
              "description": "Note not found"
            }
          }
        },
        "delete": {
          "summary": "Delete a note",
          "description": "Delete a note by its ID",
          "operationId": "deleteNote",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              },
              "description": "Note ID"
            }
          ],
          "responses": {
            "200": {
              "description": "Note deleted successfully"
            },
            "404": {
              "description": "Note not found"
            }
          }
        }
      }
    }
  }
}